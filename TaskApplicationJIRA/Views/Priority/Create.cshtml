@model TaskApplicationJIRA.Models.PriorityModel.Priority

@{
    ViewData["Title"] = "Add New Priority";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Add New Priority</h2>
            <div class="card shadow-sm p-4">
                <form asp-action="Create" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Level" class="form-label">Priority Name:</label>
                        <input asp-for="Level" class="form-control" placeholder="Enter priority name" />
                        <span asp-validation-for="Level" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
