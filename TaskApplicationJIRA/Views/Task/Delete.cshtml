@model TaskApplicationJIRA.Models.TaskModel.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h2>Are you sure you want to delete this task?</h2>

<div>
    <h4>Task Title: @Model.Title</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Image:</strong> @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" width="100" />
        }</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
</form>
